{**
 * AdminModule:Resource edit.latte template
 *
 * @author Ondřej Profant
 * @package Cryptoparty
 *
 * @param string   $basePath web base path
 * @user Nette\Security\User
 *}

{block content}
<div class="container">
<h1 n:block="title">Úprava článku</h1>
	{form editForm}
    <div class="row">
	{control $form errors}
    </div>

    <div class="row">
        <div class="col-md-10">
            <div class="row-fluid">
                <div class="col-md-1">{label title /}</div>
                <div class="col-md-3">{input title}</div>
                <div class="col-md-1">{label author_id /}</div>
                <div class="col-md-4">{input author_id} <col-md- class="pull-right">{input visible}</col-md-></div>
                <div class="col-md-1">{label visible /}</div>
	            <div class="col-md-1"></div>
            </div>
	        <div class="row">
                <div class="col-md-5">{label perex_md /}</div>
                <div class="col-md-5">Náhled <i class="glyphicon glyphicon-eye-open"></i></div>
	        </div>
            <div class="row">
                <div class="col-md-5">
                    <div id="toolbar-perex" class="wmd-toolbar"></div>
                    <br />
	                {input perex_md rows => 9, class => input-xlarge}
                </div>
                <div class="col-md-7 well" id="preview-perex"></div>
            </div>

        </div>
        <div class="col-md-1">
            <div class="row">
                <div class="col-md-1">{label tags /}</div>
            </div>
            <div class="row">

				{input tags class => form-control, size => 15}
            </div>
        </div>
    </div>
	<div class="row">
        <div class="col-md-6">{label text_md /}</div>
        <div class="col-md-6">Náhled <i class="glyphicon glyphicon-eye-open"></i></div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div id="toolbar-text" class="wmd-toolbar"></div>
            <br />
	        {input text_md class => form-control, rows => 20}
        </div>
        <div class="col-md-6 well" id="preview-text"></div>
    </div>
	<div class="row well">
        <div class="col-md-1">
		{input send}
	    </div>
        <div class="col-md-1">
            <a n:href="default" class="btn btn-warning btn-large">Zrušit</a>
        </div>
	</div>
	{/form}
</div>
{/block}

{block head}
{include #parent}
<link type="text/css" rel="stylesheet" href="{$basePath}/wmd/wmd.css"/>
{/block}

{block scripts}
{include #parent}
<!-- WMD -->
<script src="{$basePath}/wmd/showdown.js"></script>
<script src="{$basePath}/wmd/wmd.js"></script>

<!-- jQuery listener for syntax highlight -->
<script>
    new WMD("input-perex", "toolbar-perex", { preview: "preview-perex" });
    new WMD("input-text", "toolbar-text", { preview: "preview-text" });
</script>
{/block}